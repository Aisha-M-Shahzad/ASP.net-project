<style>
    #prod-container{
        width: 900px;
        margin-right: auto;
        margin-left: auto;
        margin-bottom: 100px;
    }
    #prod img{
        margin: 40px;
    }
</style>
@model CarFinalProject.Models.Category

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<div id="prod-container">
    @foreach (var car in Model.Products)
    {
        <span id="prod">
            <a href="@Url.Action("Details", "Product", new { id=car.Id}, null)"><img src="~/Content/images/@{@car.Name}.jpg" height="300", width="350" /></a>
        </span>
    }
</div>
<p>
    @if (User.Identity.Name == "admin@admin.com")
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) <b>|</b>
    }
    @Html.ActionLink("Back to List", "Index")
</p>

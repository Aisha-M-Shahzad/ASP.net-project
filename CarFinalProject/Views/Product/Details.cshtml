@model CarFinalProject.Models.Product


@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>
    <img src="~/Content/images/@{@Model.Name}.jpg" height="300" , width="350" />
</div>

<div class="bs-docs-section">

    <div class="row">
        <div class="col-lg-12">
            <div class="page-header"></div>
            <h1 id="tables">Review</h1><i class="glyphicon glyphicon-thumbs-up"></i>
        </div>

        <div class="bs-component">
            <table class="table table-hover">
                <thead style="background-color:#753737;">
                    <tr>
                        <th scope="col" style="color:black;">Rating</th>
                        <th scope="col" style="color:black;">Comments</th>
                        <th scope="col" style="color:black;">Customer</th>
                        <th scope="col" style="color:black;">Car</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>

                        @foreach (var item in Model.Reviews)
                        {
                        <tr>
                            <td style="color:#EEDAE0;">
                                @Html.DisplayFor(modelItem => item.Rating)
                            </td>
                            <td style="color:#EEDAE0;">
                                @Html.DisplayFor(modelItem => item.Comments)
                            </td>
                            <td style="color:#EEDAE0;">
                                @Html.DisplayFor(modelItem => item.Customer.Name)
                            </td>
                            <td style="color:#EEDAE0;">
                                @Html.DisplayFor(modelItem => item.Product.Name)
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <p>
        @if (User.Identity.Name == "admin@admin.com")
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) <b>|</b>
        }
        @Html.ActionLink("Back to All Cars List", "Index") <br />
        @Html.ActionLink("Back to Cars", "Details", "Category", new { id = Model.CategoryId }, null)
    </p>
    <p>
        @Html.ActionLink("Give Feedbacks", "Create", "Review", new { id = Model.Id }, null)
    </p>



